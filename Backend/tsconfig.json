{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    "noUnusedLocals": false,      // stop errors for unused variables
    "noUnusedParameters": false   // stop errors for unused function parameters
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
